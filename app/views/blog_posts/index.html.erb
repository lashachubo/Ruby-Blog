<div> 
  <div class="grid gap-6 mt-[80px] mx-[350px]">
    <% @blog_posts.each do |blog_post| %>
      <div class="bg-zinc-700 text-gray-300 p-6 rounded-lg shadow-lg">
        <h2 class="text-xl font-bold mb-2"><%= link_to blog_post.title, blog_post_path(blog_post), class: "hover:text-white" %></h2>
        <p class="text-gray-300"><%= truncate(blog_post.body, length: 150) %></p>
        <div class="mt-4 text-right">
          <%= link_to "Read More", blog_post_path(blog_post), class: "hover:text-white font-semibold" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

