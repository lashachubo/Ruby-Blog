<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <%# app/views/listings/index.html.erb %>
  
  <% content_for :title, "Listings" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Listings</h1>
    <%= turbo_frame_tag "new_listing" do  %>
     <%= link_to "New listing", new_listing_path, data: {turbo_frame: "listings"}, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <%= render "index", listings: @listings %>

  <% if @listings.prev_page %>
    <%= link_to 'Previous', listings_path(page: @listings.prev_page) %>
    <% end %>

    <% if @listings.next_page %>
    <%= link_to 'Next', listings_path(page: @listings.next_page) %>
  <% end %>  
</div>
